/* Alphabet check */
 if((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z'))
 {
 printf("'%c' is alphabet.", ch);
 }
 else if(ch >= '0' && ch <= '9')
 {
 printf("'%c' is digit.", ch);
 }
 else
 {
 printf("'%c' is special character.", ch);
 }
 return 0;
}











